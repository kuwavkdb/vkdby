<%= form_with(model: [:admin, person], class: "space-y-6") do |form| %>
  <% if person.errors.any? %>
    <div class="bg-red-50 p-4 rounded text-red-700">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>
      <ul class="list-disc list-inside">
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :name_kana, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :name_kana, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :key, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :old_key, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :old_key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :birthday, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.date_field :birthday, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white"
      %>
      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">月日のみ使用されます（年は自動的に1904年に設定されます）</p>
    </div>
    <div>
      <%= form.label :birth_year, "Birth Year", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= form.number_field :birth_year, 
          placeholder: "例: 1990",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white"
      %>
      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">年が不明な場合は空欄のまま</p>
    </div>
  </div>

  <div>
    <%= form.label :hometown, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :hometown, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :blood, "Blood Type", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-2 space-x-4">
      <% %w[A B O AB Unknown].each do |type| %>
        <label class="inline-flex items-center">
          <%= form.radio_button :blood, type, class: "form-radio text-indigo-600 focus:ring-indigo-500 border-gray-300 dark:bg-gray-700 dark:border-gray-600" %>
          <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= type %></span>
        </label>
      <% end %>
    </div>
  </div>

  <div>
    <%= form.label :status, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-2 flex flex-wrap gap-4">
      <% Person.statuses.keys.each do |status| %>
        <label class="inline-flex items-center">
          <%= form.radio_button :status, status, class: "form-radio text-indigo-600 focus:ring-indigo-500 border-gray-300 dark:bg-gray-700 dark:border-gray-600" %>
          <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= Person::STATUS_TRANSLATIONS[status] %></span>
        </label>
      <% end %>
    </div>
  </div>


  <div>
    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Parts</label>
    <div class="mt-2 flex flex-wrap gap-4">
      <% Person::AVAILABLE_PARTS.each do |part| %>
        <label class="inline-flex items-center">
          <%= form.check_box :parts, { multiple: true, class: "form-checkbox text-indigo-600 focus:ring-indigo-500 border-gray-300 dark:bg-gray-700 dark:border-gray-600" }, part, nil %>
          <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= part.humanize %></span>
        </label>
      <% end %>
    </div>
  </div>

  <div class="flex justify-end gap-x-4">
    <%= link_to "Cancel", admin_people_path, class: "px-4 py-2 text-sm text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white" %>
    <%= form.submit class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>

<% end %>
