<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="max-w-xl mx-auto">
    <h1 class="text-2xl font-bold mb-6 dark:text-white">Edit Member: <%= @unit_person.name %></h1>
    <div class="bg-white shadow rounded-lg p-6 dark:bg-gray-800">
      <%= render "form", unit: @unit, unit_person: @unit_person %>
      
      <div class="mt-4 flex justify-between">
        <%= link_to "Delete Member", admin_unit_unit_person_path(@unit, @unit_person), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
        <%= link_to "Cancel", edit_admin_unit_path(@unit), class: "text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200" %>
      </div>
    </div>
  </div>
</div>
