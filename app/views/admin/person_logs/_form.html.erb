<%= form_with(model: [:admin, person, person_log], class: "space-y-6") do |form| %>
  <% if person_log.errors.any? %>
    <div class="bg-red-50 p-4 rounded text-red-700">
      <h2><%= pluralize(person_log.errors.count, "error") %> prohibited this person log from being saved:</h2>
      <ul class="list-disc list-inside">
        <% person_log.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="date-picker">
    <%= form.label :log_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="flex gap-2">
      <%= form.text_field :log_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white", data: { date_picker_target: "input", action: "input->date-picker#syncPickerFromInput" } %>
      <input type="date" class="mt-1 block rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white w-auto" data-date-picker-target="picker" data-action="input->date-picker#apply">
    </div>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">YYYY/MM/DD or YYYY/MM</p>
  </div>

  <div>
    <%= form.label :phenomenon, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-2 flex flex-wrap gap-4">
      <% PersonLog.phenomenons.keys.each do |phenomenon| %>
        <label class="inline-flex items-center">
          <%= form.radio_button :phenomenon, phenomenon, class: "form-radio text-indigo-600 focus:ring-indigo-500 border-gray-300 dark:bg-gray-700 dark:border-gray-600" %>
          <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= PersonLog::PHENOMENON_TRANSLATIONS[phenomenon] %></span>
        </label>
      <% end %>
    </div>
  </div>

  <div>
    <%= form.label :phenomenon_alias, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :phenomenon_alias, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Optional: Custom text to display instead of the standard phenomenon name (e.g., "卒業" instead of "脱退").</p>
  </div>

  <div>
    <%= form.label :unit_id, "Unit (Optional)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.collection_select :unit_id, Unit.order(:name), :id, :name, { include_blank: true }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" } %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Select an existing unit if applicable.</p>
  </div>

  <div>
    <%= form.label :unit_name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :unit_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :unit_key, "Unit Key (Temporary)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :unit_key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">If Unit ID is unknown, enter the expected Unit Key here.</p>
  </div>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :part, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-2 flex flex-wrap gap-4">
      <% PersonLog.parts.keys.each do |part| %>
        <label class="inline-flex items-center">
          <%= form.radio_button :part, part, class: "form-radio text-indigo-600 focus:ring-indigo-500 border-gray-300 dark:bg-gray-700 dark:border-gray-600" %>
          <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= part.humanize %></span>
        </label>
      <% end %>
    </div>
  </div>

  <div>
    <%= form.label :text, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_area :text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :quote_text, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_area :quote_text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :source_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :source_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= form.label :unit_url, "Unit URL (External Link)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :unit_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">URL to external site (e.g., official website, social media) if the unit is not managed in vkdby.</p>
  </div>

  <div class="flex justify-end gap-x-4">
    <%= link_to "Cancel", admin_person_person_logs_path(person), class: "px-4 py-2 text-sm text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white" %>
    <%= form.submit class: "px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
