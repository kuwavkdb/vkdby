<div class="flex justify-center items-center min-h-screen p-0 md:p-8">
  <div class="bg-white dark:bg-slate-800 shadow-2xl rounded-none md:rounded-3xl overflow-hidden w-full max-w-5xl animate-in slide-in-from-bottom-5 duration-700 p-5 md:p-8">
    <header class="mb-8">
      <h1 class="text-3xl font-black text-slate-800 dark:text-slate-100 flex items-center gap-3">
        <span class="text-person">INDEX GROUPS</span>
      </h1>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% @index_groups.each do |group| %>
        <%= link_to indices_group_path(group.id), class: "group block bg-slate-50 dark:bg-slate-900/50 p-6 rounded-2xl border border-slate-100 dark:border-slate-700 hover:border-person hover:scale-[1.02] transition-all relative overflow-hidden" do %>
          <div class="absolute top-0 right-0 p-3 opacity-10 group-hover:opacity-20 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </div>
          <div class="relative z-10">
            <h2 class="text-lg font-black text-slate-800 dark:text-slate-200 group-hover:text-person transition-colors truncate"><%= group.name %></h2>
            <div class="mt-4 flex flex-wrap gap-2">
              <span class="text-[0.65rem] font-black uppercase px-2 py-0.5 rounded-md bg-slate-200 dark:bg-slate-700 text-slate-600 dark:text-slate-300"><%= group.tag_indices.count %> indices</span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
