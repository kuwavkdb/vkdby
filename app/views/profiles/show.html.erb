<div class="flex justify-center items-center min-h-screen p-0 md:p-8">
  <div class="bg-white dark:bg-slate-800 shadow-2xl rounded-none md:rounded-3xl overflow-hidden w-full max-w-5xl animate-in slide-in-from-bottom-5 duration-700">
    <header class="p-6 md:p-8 text-center text-white relative <%= @resource.is_a?(Unit) ? 'bg-unit' : 'bg-person' %>">
      <div class="text-[0.7rem] font-black uppercase tracking-widest opacity-80 mb-2">
        <% if @resource.is_a?(Unit) %>
          <%= @resource.unit_type.present? ? @resource.unit_type.upcase : 'UNIT' %>
        <% else %>
          PERSON
        <% end %>
      </div>
      <h1 class="text-3xl md:text-4xl font-black mb-1 tracking-tight"><%= @resource.name %></h1>
      <% if @resource.name_kana.present? %>
        <p class="text-sm md:text-base opacity-90 font-medium"><%= @resource.name_kana %></p>
      <% end %>
    </header>

    <div class="p-5 md:p-8">
      <div class="grid gap-8 grid-cols-1 md:grid-cols-[350px_1fr] items-start">
        <div>
          <section>
            <h2 class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">Basic Information</h2>
            <dl class="grid gap-4">
              <% if @resource.is_a?(Person) %>
                <% if @resource.birthday.present? %>
                  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline border-b border-slate-100 dark:border-slate-700 pb-3 last:border-0">
                    <dt class="text-sm font-semibold text-slate-500 dark:text-slate-400">Birthday</dt>
                    <dd class="text-[0.9375rem] font-bold text-slate-800 dark:text-slate-200"><%= @resource.birthday %></dd>
                  </div>
                <% end %>
                <% if @resource.blood.present? %>
                  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline border-b border-slate-100 dark:border-slate-700 pb-3 last:border-0">
                    <dt class="text-sm font-semibold text-slate-500 dark:text-slate-400">Blood Type</dt>
                    <dd class="text-[0.9375rem] font-bold text-slate-800 dark:text-slate-200 text-right"><%= @resource.blood %></dd>
                  </div>
                <% end %>
                <% if @resource.hometown.present? %>
                  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline border-b border-slate-100 dark:border-slate-700 pb-3 last:border-0">
                    <dt class="text-sm font-semibold text-slate-500 dark:text-slate-400">Hometown</dt>
                    <dd class="text-[0.9375rem] font-bold text-slate-800 dark:text-slate-200 text-right"><%= @resource.hometown %></dd>
                  </div>
                <% end %>
              <% elsif @resource.is_a?(Unit) %>
                <% if @resource.unit_type.present? %>
                  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline border-b border-slate-100 dark:border-slate-700 pb-3 last:border-0">
                    <dt class="text-sm font-semibold text-slate-500 dark:text-slate-400">Unit Type</dt>
                    <dd class="text-[0.9375rem] font-bold text-slate-800 dark:text-slate-200"><%= @resource.unit_type %></dd>
                  </div>
                <% end %>
              <% end %>

              <% if @resource.status.present? %>
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline border-b border-slate-100 dark:border-slate-700 pb-3 last:border-0">
                  <dt class="text-sm font-semibold text-slate-500 dark:text-slate-400">Status</dt>
                  <dd><span class="bg-slate-100 dark:bg-slate-700 px-3 py-1 rounded-full text-xs font-bold text-slate-600 dark:text-slate-300"><%= @resource.status.capitalize %></span></dd>
                </div>
              <% end %>
            </dl>
          </section>

          <% if @links.present? %>
            <section class="mt-12">
              <h2 class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">Links</h2>
              <%
                # 埋め込み対象となる最新のYouTubeリンクを特定
                embed_target = @links.reverse.find { |l| l.youtube_video_id.present? }
              %>
              <ul class="grid gap-3">
                <% @links.each do |link| %>
                  <% if link == embed_target %>
                    <li class="mt-2">
                      <div class="relative pb-[56.25%] h-0 overflow-hidden rounded-2xl shadow-lg ring-1 ring-slate-200 dark:ring-slate-700">
                        <iframe src="https://www.youtube.com/embed/<%= link.youtube_video_id %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen class="absolute top-0 left-0 w-full h-full border-0"></iframe>
                      </div>
                    </li>
                  <% else %>
                    <li>
                      <%= link_to link.url, target: "_blank", rel: "noopener", class: "group block p-4 bg-slate-50 dark:bg-slate-900/50 border border-slate-100 dark:border-slate-700 rounded-xl hover:border-unit hover:scale-[1.02] transition-all relative pr-10" do %>
                        <span class="text-sm font-bold text-slate-800 dark:text-slate-200 group-hover:text-unit"><%= link.display_text %></span>
                        <span class="absolute right-4 top-1/2 -translate-y-1/2 opacity-30 group-hover:opacity-100 group-hover:translate-x-1 transition-all text-unit">→</span>
                      <% end %>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </section>
          <% end %>
        </div>

        <div class="column-right">
          <% if @resource.is_a?(Unit) %>
            <% if @active_members.present? %>
              <section class="mb-12">
                <h2 class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">Active Members</h2>
                <div class="flex flex-col border border-slate-200 dark:border-slate-700 rounded-2xl overflow-hidden shadow-sm">
                  <% @active_members.each do |up| %>
                    <%= render "member_row", member: up, hide_active: true %>
                  <% end %>
                </div>
              </section>
            <% end %>

            <% if @past_members.present? %>
              <section class="mb-12">
                <h2 class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">Past Members</h2>
                <div class="flex flex-col border border-slate-200 dark:border-slate-700 rounded-2xl overflow-hidden shadow-sm">
                  <% @past_members.each do |up| %>
                    <%= render "member_row", member: up, hide_active: false %>
                  <% end %>
                </div>
              </section>
            <% end %>
          <% end %>

          <% if (@resource.is_a?(Person) && @logs.present?) || (@resource.is_a?(Unit) && @history.present?) %>
            <%
              logs_to_display = @resource.is_a?(Person) ? @logs : @history
            %>
            <section>
              <h2 class="text-xs font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-6 border-b border-slate-200 dark:border-slate-700 pb-2">History</h2>
              <div class="grid gap-6 relative before:absolute before:left-3 before:top-0 before:bottom-0 before:w-0.5 before:bg-slate-200 dark:before:bg-slate-700">
                <% logs_to_display.each do |log| %>
                  <div class="bg-slate-50 dark:bg-slate-900/50 rounded-2xl p-5 pl-10 relative border border-slate-100 dark:border-slate-700 hover:translate-x-1 transition-transform group">
                    <div class="absolute left-[0.45rem] top-6 w-2.5 h-2.5 bg-person border-2 border-white dark:border-slate-800 rounded-full z-10 shadow-[0_0_0_2px_rgba(226,232,240,1)] dark:shadow-[0_0_0_2px_rgba(51,65,85,1)]"></div>
                    <div class="flex justify-between items-center mb-2">
                      <span class="text-xs font-black text-slate-400 dark:text-slate-500 tracking-tighter"><%= log.log_date %></span>
                      <% if log.is_a?(PersonLog) %>
                        <% unless log.status == "stay" %>
                          <span class="text-[0.65rem] font-black uppercase px-2 py-0.5 rounded-md bg-slate-200 dark:bg-slate-700 text-slate-600 dark:text-slate-300"><%= log.status %></span>
                        <% end %>
                      <% elsif log.is_a?(UnitLog) %>
                        <span class="text-[0.65rem] font-black uppercase px-2 py-0.5 rounded-md bg-unit/10 text-unit"><%= log.phenomenon.capitalize %></span>
                      <% end %>
                    </div>
                    <div>
                      <% if log.text.present? %>
                        <p class="text-sm font-bold text-slate-700 dark:text-slate-300 leading-relaxed"><%= log.text %></p>
                      <% elsif log.is_a?(PersonLog) %>
                        <h3 class="text-sm font-bold text-slate-800 dark:text-slate-200">
                          <%= link_to log.person.name, profile_path(log.person.key), class: "hover:text-person transition-colors underline decoration-slate-200 dark:decoration-slate-700 underline-offset-4" %>
                          <span class="text-slate-400 dark:text-slate-500 font-medium ml-1">
                            at <%= log.unit_name.presence || log.unit&.name || "Unknown Unit" %>
                          </span>
                        </h3>
                        <% if log.part.present? %>
                          <p class="text-xs font-bold text-slate-500 dark:text-slate-400 mt-1 uppercase tracking-wider"><%= log.part.capitalize %></p>
                        <% end %>
                      <% elsif log.is_a?(UnitLog) %>
                        <h3 class="text-sm font-bold text-slate-800 dark:text-slate-200 uppercase tracking-tight"><%= log.phenomenon.capitalize.gsub('_', ' ') %></h3>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </section>
          <% end %>
        </div>
      </div>

      <section class="mt-16 bg-slate-50 dark:bg-slate-900/50 rounded-2xl p-6 border border-slate-100 dark:border-slate-700">
        <h2 class="text-xs font-bold uppercase tracking-wider text-slate-400 dark:text-slate-500 mb-4 tracking-[0.2em] border-b border-slate-200 dark:border-slate-800 pb-2">Management Information</h2>
        <dl class="grid gap-2 text-xs">
          <div class="flex justify-between items-center">
            <dt class="font-bold text-slate-400 dark:text-slate-500 italic">Key</dt>
            <dd><code class="bg-white dark:bg-slate-800 px-2 py-0.5 rounded border border-slate-200 dark:border-slate-700 font-mono text-slate-500 dark:text-slate-400"><%= @resource.key %></code></dd>
          </div>
          <% if @resource.old_key.present? %>
            <div class="flex justify-between items-center">
              <dt class="font-bold text-slate-400 dark:text-slate-500 italic">Old Key</dt>
              <dd><code class="bg-white dark:bg-slate-800 px-2 py-0.5 rounded border border-slate-200 dark:border-slate-700 font-mono text-slate-500 dark:text-slate-400"><%= @resource.old_key %></code></dd>
            </div>
          <% end %>
        </dl>
      </section>

      <footer class="mt-12 pt-8 border-t border-slate-100 dark:border-slate-700 text-center">
        <p class="text-[0.65rem] font-bold text-slate-400 dark:text-slate-500 uppercase tracking-widest leading-loose">
          Last updated<br>
          <span class="text-slate-300 dark:text-slate-600 font-black"><%= @resource.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
        </p>
      </footer>
    </div>
  </div>
</div>
